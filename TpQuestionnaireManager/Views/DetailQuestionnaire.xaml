<Page x:Class="TpQuestionnaireManager.Views.DetailQuestionnaire"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TpQuestionnaireManager.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DetailQuestionnaire">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        

        <StackPanel Grid.Column="0" Background="LightGray">
            <Button Width="40" Height="40" Margin="10" FontSize="24" Content="🏠"
                    Command="{Binding RetourAccueilCommand}"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20" VerticalAlignment="Top">
            <TextBlock Text="Question" />
            <TextBox x:Name="QuestionInput" Margin="0,0,0,10"/>

            <TextBlock Text="Réponses possibles" />
            <TextBox x:Name="Reponse1" Margin="0,0,0,5"/>
            <TextBox x:Name="Reponse2" Margin="0,0,0,5"/>
            <TextBox x:Name="Reponse3" Margin="0,0,0,5"/>
            <TextBox x:Name="Reponse4" Margin="0,0,0,10"/>

            <TextBlock Text="Réponse correcte" />
            <ComboBox x:Name="BonneReponse">
                <ComboBoxItem Content="{Binding Text, ElementName=Reponse1}" />
                <ComboBoxItem Content="{Binding Text, ElementName=Reponse2}" />
                <ComboBoxItem Content="{Binding Text, ElementName=Reponse3}" />
                <ComboBoxItem Content="{Binding Text, ElementName=Reponse4}" />
            </ComboBox>
        </StackPanel>
    </Grid>
</Page>
