<Page x:Class="TpQuestionnaireManager.Views.ListeQuestionnaire"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:local="clr-namespace:TpQuestionnaireManager.Views"
      xmlns:behaviors="clr-namespace:TpQuestionnaireManager.Behaviors"
      xmlns:converters="clr-namespace:TpQuestionnaireManager.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListeQuestionnaire">

    <Page.Resources>
        <converters:CollectionEmptyOrNullConverter x:Key="EmptyCollectionConverter" />
    </Page.Resources>

    <Grid Background="Gray">
        <Border Background="White" CornerRadius="20" Margin="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="600">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="600" Orientation="Horizontal">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                        <Label Content="Nom du questionnaire" Height="30"/>
                        <TextBox Height="30" VerticalContentAlignment="Center" Text="{Binding NouveauQuestionnaireTitre, UpdateSourceTrigger=PropertyChanged}">
                            <i:Interaction.Behaviors>
                                <behaviors:RequiredBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>
                    </StackPanel>
                    <Button 
                        Style="{StaticResource CircleButton}" 
                        Content="+" Margin="10,25, 0, 0"
                        Command="{Binding AjouterCommand}"
                    />
                </StackPanel>

                <TextBlock Text="Aucun questionnaire disponible"
               Visibility="{Binding Questionnaires, Converter={StaticResource EmptyCollectionConverter}}" 
               FontStyle="Italic"
               HorizontalAlignment="Center" Margin="10"/>
                
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="600">
                    <ListBox ItemsSource="{Binding Questionnaires}" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock FontSize="16" Text="{Binding Titre}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Style="{StaticResource CircleButton}" Content="👁️" Width="30" Height="30" Margin="5,0" />
                                            <Button Style="{StaticResource CircleButton}" Content="✏️" Width="30" Height="30" Margin="5,0" Background="Orange"
                                                    Command="{Binding DataContext.ModifierCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"/>
                                            <Button 
                                            Style="{StaticResource CircleButton}" 
                                            Content="X" Width="30" Height="30" 
                                            Margin="5,0" Background="Red" 
                                            Command="{Binding DataContext.SupprimerCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding .}"
                                            />
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
